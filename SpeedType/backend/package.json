{
  "name": "speedtype-backend",
  "version": "0.1.0",
  "description": "Backend for SpeedType - A real-time typing race game",
  "main": "dist/server.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:prod": "NODE_ENV=production ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "NODE_ENV=production node dist/server.js",
    "build": "tsc",
    "postinstall": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --config jest.config.js --testMatch='**/__tests__/unit/**/*.test.{ts,js}'",
    "test:integration": "jest --config jest.integration.config.js",
    "test:socket": "jest --config jest.socket.config.js"
  },
  "keywords": [
    "typing",
    "game",
    "multiplayer",
    "socket.io"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "socket.io": "^4.7.4",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "socket.io-client": "^4.7.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/speedtype"
  }
}
